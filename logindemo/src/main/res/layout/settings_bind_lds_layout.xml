<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_settings_bind_lds"
    android:padding="8dp"
    android:visibility="gone"
    tools:visibility="visible">

    <TextView
        android:id="@+id/tv_bind_lds_confirm"
        android:layout_width="180dp"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_btn_primary"
        android:gravity="center"
        android:text="@string/bind_lds_confirm"
        android:textSize="24sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/edt_bind_lds"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_settings_bind_lds_input"
        android:paddingStart="20dp"
        android:drawablePadding="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        android:inputType="phone"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:hint="@string/settings_bind_lds_hint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_bind_lds_confirm"
        app:layout_constraintBottom_toBottomOf="@id/tv_bind_lds_confirm"
        app:layout_constraintEnd_toStartOf="@id/tv_bind_lds_confirm"/>

</androidx.constraintlayout.widget.ConstraintLayout>