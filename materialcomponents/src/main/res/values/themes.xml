<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudyDemos" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

<!--        TopAppBar背景沉浸状态栏设置-->
<!--        <item name="android:windowTranslucentStatus">true</item>-->

        <!-- Customize your theme here. -->
        <!--        <item name="shapeAppearanceSmallComponent">@style/StudyDemos.SmallComponent</item>-->
        <!--        <item name="bottomAppBarStyle">@style/Widget.StudyDemos.BottomAppBar</item>-->
        <!--        <item name="floatingActionButtonStyle">@style/Widget.StudyDemos.FloatingActionButton</item>-->


<!--        2.设置actionMode-->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeStyle">@style/Widget.Demo.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_baseline_close_24</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>

    </style>


    <style name="StudyDemos.SmallComponent" parent="@style/ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ThemeOverlay.StudyDemos.FloatingActionButton" parent="">
        <item name="shapeAppearanceSmallComponent">@style/StudyDemos.SmallComponent</item>
    </style>

    <style name="Widget.StudyDemos.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.StudyDemos.FloatingActionButton</item>
    </style>


    <style name="Widget.StudyDemos.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="shapeAppearanceSmallComponent">@style/StudyDemos.SmallComponent</item>
    </style>

    <style name="Theme.StudyDemos.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--    top app bar-->
    <style name="TextAppearance.Demo.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextAppearance.Demo.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.0125</item>
    </style>
<!--    top app bar end-->





</resources>