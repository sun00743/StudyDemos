    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_pet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dddddd"
        app:chipSpacingHorizontal="0dp"
        app:layout_constraintTop_toBottomOf="@id/edit_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_cat"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="catcatcatcatChioce"
            app:chipCornerRadius="4dp"
            app:textStartPadding="0dp"
            app:textEndPadding="0dp"
            app:chipStartPadding="0dp"
            app:chipMinHeight="20dp"
            app:chipMinTouchTargetSize="0dp"/>

<!--        app:chipBackgroundColor="@color/design_default_color_error"-->
<!--        chipMinHeight: 控制最小高度-->
<!--        chipMinTouchTargetSize: 为点击留有的上下空白区域-->


        <com.google.android.material.chip.Chip
            android:id="@+id/chip_dog"
            style="@style/Widget.MaterialComponents.Chip.Entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dogEntry"
            app:chipCornerRadius="4dp"/>


        <com.google.android.material.chip.Chip
            android:id="@+id/chip_pig"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pigpigFilter"
            app:chipCornerRadius="8dp"/>


        <com.google.android.material.chip.Chip
            android:id="@+id/chip_m"
            style="@style/Widget.MaterialComponents.Chip.Action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="老鼠老鼠Action"
            app:chipCornerRadius="18dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_fish"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fishfishChoice"/>

    </com.google.android.material.chip.ChipGroup>

